<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.mct.auto_clicker.view.NestedRadioGroup
        android:id="@+id/nested_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_vertical_large">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/rb_infinity_loop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_vertical_default"
                android:text="@string/dl_infinity_loop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/rb_number_of_loops"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_vertical_default"
                android:text="@string/dl_number_of_loops" />

            <EditText
                android:id="@+id/edt_number_of_loop"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:hint="1"
                android:importantForAutofill="no"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <RadioButton
                android:id="@+id/rb_countdown_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_vertical_default"
                android:text="@string/dl_countdown_timer" />

            <TextView
                android:id="@+id/tv_countdown_timer"
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:background="@drawable/ripple_white"
                android:gravity="center"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textColor="@color/accent"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </com.mct.auto_clicker.view.NestedRadioGroup>

    <include layout="@layout/include_view_separator" />

</LinearLayout>